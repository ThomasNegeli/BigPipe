<config>
	<modules>
		<Sitewards_BigPipe>
			<version>0.1.2</version>
		</Sitewards_BigPipe>
	</modules>
	<global>
		<blocks>
			<sitewards_bigpipe>
				<class>Sitewards_BigPipe_Block</class>
			</sitewards_bigpipe>
		</blocks>
		<models>
			<core>
				<rewrite>
					<layout>Sitewards_BigPipe_Model_Core_Layout</layout>
				</rewrite>
			</core>
			<sitewards_bigpipe>
				<class>Sitewards_BigPipe_Model</class>
			</sitewards_bigpipe>
		</models>
	</global>
	<frontend>
		<events>
			<controller_front_send_response_before>
				<observers>
					<sitewards_bigpipe>
						<class>Sitewards_BigPipe_Model_Tags</class>
						<method>stripEndTags</method>
					</sitewards_bigpipe>
				</observers>
			</controller_front_send_response_before>
			<controller_front_send_response_after>
				<observers>
					<sitewards_bigpipe>
						<class>Sitewards_BigPipe_Model_Dispatcher</class>
						<method>outputBigPipeBlocks</method>
					</sitewards_bigpipe>
				</observers>
			</controller_front_send_response_after>
		</events>
		<layout>
			<updates>
				<sitewards_bigpipe>
					<file>sitewards/bigpipe.xml</file>
				</sitewards_bigpipe>
			</updates>
		</layout>
	</frontend>
</config>